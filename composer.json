{
    "name": "firehed/input",
    "description": "PHP Input Handling Tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Firehed\\Input\\": ["src/", "tests/"]
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.32",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpunit/phpunit": "^7 || ^8 || ^9"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan",
            "@phpcs"
        ],
        "autofix": "phpcbf",
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse",
        "phpstan-baseline": "phpstan analyse --generate-baseline",
        "phpcs": "phpcs"
    }
}
