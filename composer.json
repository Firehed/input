{
    "name": "firehed/input",
    "description": "PHP Input Handling Tools",
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Stern",
            "email": "eric@ericstern.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Firehed\\Input\\": ["src/", "tests/"]
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0 || ^8.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.32",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpunit/phpunit": "^7"
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpstan"
        ],
        "phpstan": "phpstan analyse --no-progress .",
        "phpunit": "phpunit --coverage-text"
    }
}
